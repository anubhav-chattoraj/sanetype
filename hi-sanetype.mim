    ("Ee", ?ऎ)
    ("Ao", ?ऑ)
    ("Oo", ?ऒ)
    ("AR", ?ॠ)
    ("Al", ?ऌ)
    ("AL", ?ॡ)
    ("Ae", ?ॲ)
    ("Oe", ?ॳ)
    ("OE", ?ॴ)
    ("Aw", ?ॵ)
    ("Eu", ?ॶ)
    ("EU", ?ॷ)
