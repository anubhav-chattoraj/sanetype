    ("6"    ?६)                 ; DEVANAGARI DIGIT SIX
    ("7"    ?७)                 ; DEVANAGARI DIGIT SEVEN
    ("8"    ?८)                 ; DEVANAGARI DIGIT EIGHT
    ("9"    ?९)                 ; DEVANAGARI DIGIT NINE
    ;; symbols
    (",M"   ?ॐ)                 ; DEVANAGARI OM
    (",,"   ?॰)                 ; DEVANAGARI ABBREVIATION SIGN
    ("$"    ?₹)                 ; INDIAN RUPEE SIGN
    ;; non-printing chars
    ("`"   0x200C)              ; ZERO WIDTH JOINER
    ("~"   0x200D))             ; ZERO WIDTH NON-JOINER
  (mode
    ("q")))
    
(state
  (init
    (characters)
    (mode (shift escape)))
  (escape
    (nil (commit))))
    
