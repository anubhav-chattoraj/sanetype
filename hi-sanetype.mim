    (".L"   ?ऴ)                 ; DEVANAGARI LETTER LLLA
    ;; Conjuncts
    ("K"    "क्ष")
    ("F"    "त्र")
    ("J"    "ज्ञ")
    ("X"    "श्र")
    ("V"    "द्य")
    ;; Half-consonants
    ("h"    "्ह")
    ("D"    "र्")
    ("R"    "्र")            
    ("Y"    "्य")
    ;; geminates
    ("qk"   "क्क")
    ("qkh"  "क्ख")
