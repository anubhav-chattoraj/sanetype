    ("Ao", ?ॉ)
    ("Oo", ?ॊ)
    ("AR", ?ॄ)
    ("Al", ?ॢ)
    ("AL", ?ॣ)
    ("Ae", ?ॅ)
    ("Oe", ?)
    ("OE", ?)
    ("Aw", ?ॏ)
    ("Eu", ?ॖ)
    ("EU", ?ॗ))
  (consonant
    ;; Plain consonants
    ("k" , ?क)
    ("kh", ?ख)
    ("g" , ?ग)
    ("gh", ?घ)
    ("{g", ?ङ)
