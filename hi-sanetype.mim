    ("qv"   "द्द")
    ("qvh"  "द्ध")
    ("qn"   "न्न")
    ("qp"   "प्प")
    ("qph"  "प्फ")
    ("qb"   "ब्ब")
    ("qbh"  "ब्भ")
    ("qm"   "म्म")
    ("qy"   "य्य")
    ("qr"   "र्र")
    ("ql"   "ल्ल")
    ("qL"   "ळ्ळ")
    ("qw"   "व्व")
    ("qx"   "श्श")
    ("qS"   "ष्ष")
    ("qs"   "स्स")
    ("qH"   "ह्ह")
    ("q.k"  "क़्क़")
    ("q.kh" "ख़्ख़")
    ("q.g"  "ग़्ग़")
    ("q.j"  "ज़्ज़")
    ("q.d"  "ड़्ड़")
    ("q.dh" "ड़्ढ़")
    ("q.n"  "ऩ्ऩ")
    ("q.ph" "फ़्फ़")
    ("q.y"  "य़्य़")
    ("q.r"  "ऱ्ऱ")
    ("q.L"  "ऴ्ऴ")
    ;; Implosives
    ("_g"   ?ॻ)                 ; DEVANAGARI LETTER GGA
    ("_j"   ?ॼ)                 ; DEVANAGARI LETTER JJA
    ("_d"   ?ॾ)                 ; DEVANAGARI LETTER DDDA
    ("_b"   ?ॿ)                 ; DEVANAGARI LETTER BBA
    ("Hh"   ?ॽ)                 ;  DEVANAGARI LETTER GLOTTAL STOP
    ;; diacritics    
    ("z"    ?्)                 ; DEVANAGARI SIGN VIRAMA
    ("Q"    ?़)                 ; DEVANAGARI SIGN NUKTA
    ("M"    ?ं)                 ; DEVANAGARI SIGN ANUSVARA
    ("W"    ?ँ)                 ; DEVANAGARI SIGN CANDRABINDU
    ("Z"    ?ः)                 ; DEVANAGARI SIGN VISARGA
    ("'"    ?ʼ)                 ; MODIFIER LETTER APOSTROPHE
    ("''"   ?ऽ)                 ;  DEVANAGARI SIGN AVAGRAHA
    ;; punctuation
    ("\\"   ?।)                 ; DEVANAGARI DANDA
    ("|"    ?॥)                 ; DEVANAGARI DOUBLE DANDA
    ;; digits
    ("0"    ?०)                 ; DEVANAGARI DIGIT ZER0
    ("1"    ?१)                 ; DEVANAGARI DIGIT ONE
    ("2"    ?२)                 ; DEVANAGARI DIGIT TWO
    ("3"    ?३)                 ; DEVANAGARI DIGIT THREE
