    ("r" , ?र)
    ("l" , ?ल)
    ("z" , ?ळ)
    ("w" , ?व)
    ("Ss", ?श)
    ("Sh", ?ष)
    ("s" , ?स)
    ("H" , ?ह)
    ;; Consonants with nuqta
    ("K" , ?क़)
    ("Kh", ?ख़)
    ("G" , ?ग़)
    ("J" , ?ज़)
    ("D" , ?ड़)
    ("Dh", ?ढ़)
    ("N" , ?ऩ)
    ("Ph", ?फ़)
    ("Y" , ?य़)
