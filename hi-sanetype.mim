    ("Sk", "क्ष")
    ("F" , "त्र")
    ("{j", "ज्ञ")
    ("Sr", "श्र")
    ("V" , "द्य")
    ("<" , "र्")
    (">" , "्र")))
(state
  (first
    (independent)
    (consonant (shift second)))
  (second
    (dependent (shift first))
    (nil (shift first))))
    
